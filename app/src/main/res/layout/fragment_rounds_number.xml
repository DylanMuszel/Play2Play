<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/green_eden">

    <include layout="@layout/view_guidelines" />

    <TextView
        android:id="@+id/rounds_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/wild_sand"
        android:textSize="@dimen/font_large"
        android:layout_marginTop="@dimen/large_extra"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/large"
        android:layout_marginEnd="@dimen/large"
        android:text="@string/tutti_frutti_rounds" />

    <ImageButton
        android:id="@+id/arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/number"
        app:layout_constraintTop_toBottomOf="@id/rounds_text"
        android:layout_marginStart="@dimen/huge_extra"
        android:layout_marginTop="@dimen/large_extra"
        android:paddingTop="@dimen/small"
        android:src="@drawable/ic_baseline_arrow_left"
        android:background="@null"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/number"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/wild_sand"
        android:textSize="@dimen/font_huge"
        app:layout_constraintTop_toBottomOf="@id/rounds_text"
        app:layout_constraintStart_toEndOf="@id/arrow_left"
        app:layout_constraintEnd_toStartOf="@id/arrow_right"
        android:layout_marginTop="@dimen/large_extra"/>

    <ImageButton
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rounds_text"
        android:layout_marginEnd="@dimen/huge_extra"
        android:layout_marginTop="@dimen/large_extra"
        android:paddingTop="@dimen/small"
        android:src="@drawable/ic_baseline_arrow_right"
        android:background="@null"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/create_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="@string/games_create"
        app:layout_constraintTop_toBottomOf="@id/number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
        android:layout_marginTop="@dimen/large"
        android:layout_marginStart="@dimen/large"
        android:layout_marginEnd="@dimen/large"/>

</androidx.constraintlayout.widget.ConstraintLayout>

