<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.P2P" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/colorBackground</item>
        <item name="colorOnSurface">@color/green_black</item>
        <!-- Error brand color. -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Text edit label colors -->
        <item name="colorControlNormal">@color/green_eden</item>
        <item name="colorControlActivated">@color/green_eden</item>
        <item name="colorControlHighlight">@color/coral</item>

        <!-- Font -->
        <item name="fontFamily">@font/montserrat</item>

        <!-- Styles -->
        <item name="textInputStyle">@style/Widget.P2P.TextInputLayout</item>
        <item name="editTextStyle">@style/Widget.P2P.EditText</item>
        <item name="materialButtonStyle">@style/Widget.P2P.Button</item>
    </style>
</resources>